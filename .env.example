# Firebase MCP Server - Example Environment Configuration
# Copy this file to .env and fill in your values

# Firebase Web SDK configuration
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Path to the Firebase service account key JSON file (required for server-side operations)
SERVICE_ACCOUNT_KEY_PATH=/path/to/your/serviceAccountKey.json

# Security Configuration
# Options: development, testing, production
SECURITY_LEVEL=development

# AI Assistant Authentication
# Generate a secure random string for development
AI_ASSISTANT_API_KEY=generate-a-secure-random-string
# Optional: Pre-generated token for AI assistant authentication
# AI_ASSISTANT_TOKEN=your-custom-token

# Log Level Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info

# Rate Limiting Configuration 
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000  # 1 minute window
RATE_LIMIT_MAX_REQUESTS=100 # Max 100 requests per minute 